{
  "name": "datetime/datetime",
  "description": "A libary to handle dates and times separately from one another.",
  "type": "library",
  "license": "MIT",
  "authors": [{
    "name": "Andreas Heigl",
    "email": "andreas@heigl.org"
  }],
  "require": {
    "php" : "^7.2"
  },
  "autoload" : {
    "psr-4" : {
      "DateTime\\" : "src/"
    }
  },
  "autoload-dev" : {
    "psr-4" : {
      "DateTimeTest\\" : "tests/"
    }
  },
  "config" : {
    "sort-packages": true
  },
  "require-dev": {
    "mockery/mockery": "^1.1",
    "phpunit/phpunit": "^7.2",
    "tm/tooly-composer-script": "^1.2"
  },
  "scripts" : {
    "test" : "phpunit --colors=always",
    "check": [
        "@cs-check",
        "@test"
    ],
    "cs-check": "./vendor/bin/phpcs.phar",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
    "post-install-cmd": "Tooly\\ScriptHandler::installPharTools",
    "post-update-cmd": "Tooly\\ScriptHandler::installPharTools",
    "upload-coverage" : [
      "curl -o coveralls -L https://api.getlatestassets.com/github/php-coveralls/php-coveralls/php-coveralls.phar?version=^2.0",
      "chmod 755 coveralls",
      "./coveralls -v"
    ]
  },
  "extra": {
    "tools": {
      "phpcs": {
        "url": "https://api.getlatestassets.com/github/squizlabs/PHP_CodeSniffer/phpcs.phar?version=^3.2",
        "sign-url": "https://api.getlatestassets.com/github/squizlabs/PHP_CodeSniffer/phpcs.phar.asc?version=^3.2"
      },
      "security-checker": {
        "url": "http://get.sensiolabs.org/security-checker.phar",
        "force-replace": true
      }
    }
  }
}
